CC = mpicc
CFLAGS = -O2 $(INC) -Wall -Wextra -pedantic -std=c99 -D_DEFAULT_SOURCE
LDFLAGS = -lm -L../lib3380 -l3380

MPICMD = ./$(TARG) data/small_matrix_a.bin data/small_matrix_b.bin data/c.bin
MPIHOST = --hostfile /etc/openmpi/openmpi-default-hostfile

all:
	@echo targets: printer compare clean

printer: printer.o
	$(CC) $(CFLAGS) $< -o $@ $(LDFLAGS)

compare: compare.o
	$(CC) $(CFLAGS) $< -o $@ $(LDFLAGS)

.c.o:
	$(CC) $(CFLAGS) -c $<

clean:
	git clean -Xdf
